{
	"name": "phase-1",
	"version": "0.1.3",
	"packageManager": "pnpm@8.7.4",
	"type": "module",
	"scripts": {
		"dev": "vite",
		"build": "tsc && vite build",
		"preview": "vite preview",
		"prepare": "husky"
	},
	"dependencies": {
		"@preline/accordion": "^2.0.2",
		"@preline/dropdown": "^2.0.2",
		"@preline/input-number": "^2.0.2",
		"@preline/tooltip": "^2.0.2",
		"lucide": "^0.343.0",
		"preline": "^2.0.3",
		"three": "^0.162.0"
	},
	"devDependencies": {
		"@commitlint/cli": "^18.6.1",
		"@commitlint/config-conventional": "^18.6.2",
		"@tailwindcss/forms": "^0.5.7",
		"@types/three": "^0.162.0",
		"@typescript-eslint/eslint-plugin": "^7.0.1",
		"@typescript-eslint/parser": "^7.0.1",
		"@vitejs/plugin-legacy": "^5.3.0",
		"@vituum/vite-plugin-posthtml": "^1.1.0",
		"@vituum/vite-plugin-tailwindcss": "^1.1.0",
		"eslint": "^8.56.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-html": "^8.0.0",
		"eslint-plugin-prettier": "^5.1.3",
		"eslint-plugin-tailwindcss": "^3.14.2",
		"filesize": "^10.1.0",
		"husky": "^9.0.11",
		"lightningcss": "^1.24.0",
		"lint-staged": "^15.2.2",
		"postcss": "^8.4.35",
		"prettier": "3.2.5",
		"prettier-plugin-css-order": "^2.0.1",
		"prettier-plugin-organize-attributes": "^1.0.0",
		"prettier-plugin-organize-imports": "^3.2.4",
		"prettier-plugin-tailwindcss": "^0.5.11",
		"tailwindcss": "^3.4.1",
		"terser": "^5.27.1",
		"typescript": "^5.2.2",
		"vite": "^5.1.0",
		"vite-bundle-analyzer": "^0.8.1",
		"vite-tsconfig-paths": "^4.3.1",
		"vituum": "^1.1.0"
	},
	"lint-staged": {
		"src/*": "eslint"
	},
	"prettier": {
		"attributeGroups": [
			"^class$",
			"^(id|name)$",
			"$DEFAULT",
			"^aria-"
		],
		"arrowParens": "always",
		"bracketSpacing": true,
		"endOfLine": "crlf",
		"experimentalTernaries": true,
		"htmlWhitespaceSensitivity": "ignore",
		"jsxSingleQuote": true,
		"printWidth": 120,
		"proseWrap": "always",
		"semi": true,
		"singleAttributePerLine": true,
		"singleQuote": true,
		"tabWidth": 4,
		"trailingComma": "all",
		"useTabs": true,
		"quoteProps": "consistent",
		"plugins": [
			"prettier-plugin-css-order",
			"prettier-plugin-organize-imports",
			"prettier-plugin-organize-attributes",
			"prettier-plugin-tailwindcss"
		]
	},
	"commitlint": {
		"parserPreset": "conventional-changelog-conventionalcommits",
		"rules": {
			"body-leading-blank": [
				1,
				"always"
			],
			"body-max-line-length": [
				2,
				"always",
				300
			],
			"footer-leading-blank": [
				1,
				"always"
			],
			"footer-max-line-length": [
				2,
				"always",
				100
			],
			"header-max-length": [
				2,
				"always",
				100
			],
			"subject-case": [
				2,
				"never",
				[
					"sentence-case",
					"start-case",
					"pascal-case",
					"upper-case"
				]
			],
			"subject-empty": [
				2,
				"never"
			],
			"subject-full-stop": [
				2,
				"never",
				"."
			],
			"type-case": [
				2,
				"always",
				"lower-case"
			],
			"type-empty": [
				2,
				"never"
			],
			"type-enum": [
				2,
				"always",
				[
					"feat",
					"tweak",
					"refactor",
					"fix",
					"docs",
					"ci",
					"chore",
					"test",
					"deps"
				]
			]
		},
		"prompt": {
			"questions": {
				"type": {
					"description": "Select the type of change that you're committing",
					"enum": {
						"feat": {
							"description": "A new feature",
							"title": "Features",
							"emoji": "‚ú®"
						},
						"tweak": {
							"description": "Small changes or improvements",
							"title": "Tweaks",
							"emoji": "üé®"
						},
						"refactor": {
							"description": "A code change that neither fixes a bug nor adds a feature",
							"title": "Code Refactoring",
							"emoji": "üõ†Ô∏è"
						},
						"fix": {
							"description": "A bug fix",
							"title": "Bug Fixes",
							"emoji": "üêõ"
						},
						"docs": {
							"description": "Documentation only changes",
							"title": "Documentation",
							"emoji": "üìö"
						},
						"ci": {
							"description": "Changes to our CI configuration files and scripts (example scopes: Travis, Circle, BrowserStack, SauceLabs)",
							"title": "Continuous Integrations",
							"emoji": "üèóÔ∏è"
						},
						"chore": {
							"description": "Other changes that don't modify src or test files",
							"title": "Chores",
							"emoji": "üßπ"
						},
						"test": {
							"description": "Adding missing tests or correcting existing tests",
							"title": "Tests",
							"emoji": "üß™"
						},
						"deps": {
							"description": "Add, update, or remove dependencies",
							"title": "Dependencies",
							"emoji": "üì¶"
						}
					}
				},
				"scope": {
					"description": "What is the scope of this change (e.g. component or file name)"
				},
				"subject": {
					"description": "Write a short, imperative tense description of the change"
				},
				"body": {
					"description": "Provide a longer description of the change"
				},
				"isBreaking": {
					"description": "Are there any breaking changes?"
				},
				"breakingBody": {
					"description": "A BREAKING CHANGE commit requires a body. Please enter a longer description of the commit itself"
				},
				"breaking": {
					"description": "Describe the breaking changes"
				},
				"isIssueAffected": {
					"description": "Does this change affect any open issues?"
				},
				"issuesBody": {
					"description": "If issues are closed, the commit requires a body. Please enter a longer description of the commit itself"
				},
				"issues": {
					"description": "Add issue references (e.g. \"fix #123\", \"re #123\".)"
				}
			}
		}
	},
	"eslintConfig": {
		"parser": "@typescript-eslint/parser",
		"env": {
			"browser": true,
			"es2021": true,
			"node": true
		},
		"extends": [
			"prettier"
		],
		"parserOptions": {
			"ecmaVersion": 13,
			"sourceType": "module"
		},
		"plugins": [
			"@typescript-eslint",
			"html",
			"tailwindcss",
			"prettier"
		],
		"rules": {
			"max-len": "off",
			"no-tabs": "off",
			"no-shadow": "off",
			"key-spacing": "off",
			"import/order": "off",
			"padded-blocks": "off",
			"no-unused-vars": "off",
			"linebreak-style": "off",
			"arrow-body-style": "off",
			"no-empty-pattern": "off",
			"import/extensions": "off",
			"no-nested-ternary": "off",
			"capitalized-comments": "off",
			"import/no-unresolved": "off",
			"no-underscore-dangle": "off",
			"no-use-before-define": "off",
			"no-promise-executor-return": "off",
			"import/prefer-default-export": "off",
			"@typescript-eslint/ban-ts-comment": "off",
			"import/no-extraneous-dependencies": "off",
			"@typescript-eslint/no-explicit-any": "off",
			"@typescript-eslint/no-empty-interface": "off",
			"object-curly-spacing": [
				"error",
				"always"
			],
			"camelcase": [
				"error",
				{
					"ignoreImports": true,
					"ignoreDestructuring": true
				}
			],
			"prettier/prettier": [
				"error",
				{
					"attributeGroups": [
						"^class$",
						"^(id|name)$",
						"$DEFAULT",
						"^aria-"
					],
					"arrowParens": "always",
					"bracketSpacing": true,
					"endOfLine": "crlf",
					"experimentalTernaries": true,
					"htmlWhitespaceSensitivity": "ignore",
					"jsxSingleQuote": true,
					"printWidth": 120,
					"proseWrap": "always",
					"semi": true,
					"singleAttributePerLine": true,
					"singleQuote": true,
					"tabWidth": 4,
					"trailingComma": "all",
					"useTabs": true,
					"quoteProps": "consistent",
					"plugins": [
						"prettier-plugin-css-order",
						"prettier-plugin-organize-imports",
						"prettier-plugin-organize-attributes",
						"prettier-plugin-tailwindcss"
					]
				}
			],
			"no-trailing-spaces": [
				"error",
				{
					"ignoreComments": true
				}
			],
			"indent": [
				"error",
				"tab",
				{
					"SwitchCase": 1
				}
			],
			"@typescript-eslint/no-unused-vars": [
				"error",
				{
					"argsIgnorePattern": "^_",
					"varsIgnorePattern": "^_"
				}
			]
		}
	}
}
